  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\AzureApi\AzureApi.csproj" />
    <ProjectReference Include="..\MetricStats\MetricStats.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="appsettings.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
